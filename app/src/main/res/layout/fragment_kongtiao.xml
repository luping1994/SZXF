<layout>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/kt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/kongtiao_bg" />

                <ImageView
                    android:id="@+id/feng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kt"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-15dp"
                    android:src="@drawable/feng"
                    android:visibility="invisible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#17f1ec"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/wendu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#17f1ec"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fengxiangText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minWidth="50dp"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/fengsuText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:minWidth="50dp"
                        android:text=""
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dingshiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:minWidth="50dp"
                        android:text="定时0.5小时"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_kt_height"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="@dimen/item_kt_height"
                        android:background="@drawable/bg_kt_item_long"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="睡眠模式"
                            android:textColor="@color/black"
                            android:textSize="@dimen/actionBarSubTitleSize" />

                        <net.suntrans.looney.widgets.SwitchButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:textSize="11sp"
                            app:kswBackDrawable="@drawable/switch_bottom_white"
                            app:kswThumbDrawable="@drawable/switch_top_circle" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/sub"
                        android:layout_width="@dimen/item_kt_width"
                        android:layout_height="@dimen/item_kt_height"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/bg_kt_item"
                        android:src="@drawable/src_sub" />

                    <ImageButton
                        android:id="@+id/add"
                        android:layout_width="@dimen/item_kt_width"
                        android:layout_height="@dimen/item_kt_height"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/bg_kt_item"
                        android:src="@drawable/src_add" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/modelLL"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/mode_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit"
                        android:gravity="center"
                        android:tag="0"
                        android:text="自动" />

                    <TextView
                        android:id="@+id/mode_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit"
                        android:gravity="center"
                        android:tag="1"
                        android:text="制冷" />

                    <TextView
                        android:id="@+id/mode_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit"
                        android:gravity="center"
                        android:tag="2"
                        android:text="制热" />

                    <TextView
                        android:id="@+id/mode_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit"
                        android:gravity="center"
                        android:tag="3"
                        android:text="抽湿" />

                    <TextView
                        android:layout_marginRight="16dp"
                        android:id="@+id/mode_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit"
                        android:gravity="center"
                        android:tag="4"
                        android:text="送风" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/windSLL"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/wind_s_0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit"
                        android:gravity="center"
                        android:tag="0"
                        android:text="自动风" />

                    <TextView
                        android:id="@+id/wind_s_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit"
                        android:gravity="center"
                        android:tag="1"
                        android:text="一级风" />

                    <TextView
                        android:id="@+id/wind_s_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit"
                        android:gravity="center"
                        android:tag="2"
                        android:text="二级风" />

                    <TextView
                        android:id="@+id/wind_s_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit"
                        android:gravity="center"
                        android:tag="3"
                        android:text="三级风" />

                    <TextView
                        android:layout_marginRight="16dp"
                        android:id="@+id/wind_s_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit"
                        android:gravity="center"
                        android:tag="4"
                        android:text="四级风" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/close"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_dianyuan">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_dianyuan" />
                </RelativeLayout>

            </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>